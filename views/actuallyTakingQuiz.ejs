<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <link rel="stylesheet" href="/styles/actuallyTakingQuiz.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- External JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <!-- App JS -->
  <script type="text/javascript" src="/scripts/app.js"></script>
  <title>Document</title>
</head>

<body>
  <%- include('partials/_navbar') %>
    <div class="all-quizzes-container">
      <% let questionNumber=0 %>
        <% for (let obj of questionsObject) { %>
          <% questionNumber++ %>
            <div class="submission-question card">
              <div class="card-header">
                <h3>QUESTION <%= questionNumber %>
                </h3>
              </div>
              <div class="card-body">
                <p></p>
                <p>
                  <%= obj.question %>
                </p>
                <p></p>
              </div>
              <div class="button-grid"></div>
              <% const optionsArray=[obj.correct_answer, obj.option_1, obj.option_2, obj.option_3].sort((a, b)=> 0.5 -
                Math.random()); %>

                <button class="testbutton" value="<%= optionsArray[0] %>">
                  <%= optionsArray[0] %>
                </button>
                <button class="testbutton" value="<%= optionsArray[1] %>">
                  <%= optionsArray[1] %>
                </button>
                <button class="testbutton" value="<%= optionsArray[2] %>">
                  <%= optionsArray[2] %>
                </button>
                <button class="testbutton" value="<%= optionsArray[3] %>">
                  <%= optionsArray[3] %>
                </button>
            </div>
            <% } %>
              <form id="quizSubmit">
                <button id="submit">SUBMIT QUIZ</button>
              </form>
              <div id="score"></div>
    </div>


    <%- include('partials/_footer') %>
</body>

</html>