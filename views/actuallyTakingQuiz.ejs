<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <link rel="stylesheet" href="/styles/actuallyTakingQuiz.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- External JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <!-- App JS -->
  <script type="text/javascript" src="/scripts/app.js"></script>
  <title>Document</title>
</head>

<body>
  <%- include('partials/_navbar') %>
    <div class="all-quizzes-container">
      <p class="title">
        <%= quizName %> Quiz
      </p>
      <% function shuffle(array) { array.sort(()=> Math.random() - 0.5);
        }%>
        <% let number=0 %>
          <% let array=['correct_answer', 'option_1' , 'option_2' , 'option_3' ] %>
            <% for (let obj of questionsObject) { %>
              <% shuffle(array); %>
                <% number++ %>
                  <div class="submission-question card">
                    <div class="card-header">
                      <p class="question-number">QUESTION <%= number %>
                      </p>
                    </div>
                    <div class="card-body">
                      <p class="question">
                        <%= obj.question %>
                      </p>
                      <p></p>
                      <div class="button-grid"></div>
                      <button class="testbutton" value="<%= obj[array[0]] %>">
                        <%= obj[array[0]] %>
                      </button>
                      <button class="testbutton" value="<%= obj[array[1]] %>">
                        <%= obj[array[1]]%>
                      </button>
                      <button class="testbutton" value=" <%= obj[array[2]] %>">
                        <%= obj[array[2]] %>
                      </button>
                      <button class="testbutton" value="<%= obj[array[3]] %>">
                        <%= obj[array[3]] %>
                      </button>
                    </div>
                  </div>
                  <% } %>
                    <form id="quizSubmit">
                      <button id="submit">SUBMIT QUIZ</button>
                    </form>
                    <div id="score"></div>
    </div>


    <%- include('partials/_footer') %>
</body>

</html>